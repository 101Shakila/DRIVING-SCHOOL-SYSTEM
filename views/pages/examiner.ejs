<%- include('../layout', { title: 'Examiner Page' }) %>

    <section class="center-content">
        <h1 class="text-center mb-4">Examiner Page</h1>

        <% if (message) { %>
            <h2 class="text-center text-success">
                <%= message %>
            </h2>
            <% } %>

                <div class="border border-4 p-4 bg-light text-dark">
                    <h2 class="text-center mb-4">Available Appointments</h2>
                    <% if (appointments && appointments.length> 0) { %>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                    <th>Driver Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% appointments.forEach(function(appointment) { %>
                                    <tr>
                                        <td>
                                            <%= appointment.date %>
                                        </td>
                                        <td>
                                            <%= appointment.time %>
                                        </td>
                                        <td>
                                            <% if (appointment.isTimeAvailable) { %>
                                                Available
                                                <% } else { %>
                                                    Booked
                                                    <% } %>
                                        </td>
                                        <td>
                                            <% if (appointment.driver) { %>
                                                <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                                    data-bs-target="#driverModal_<%= appointment._id %>">
                                                    View Driver
                                                </button>
                                                <% } else { %>
                                                    No driver assigned
                                                    <% } %>
                                        </td>
                                    </tr>

                                    <!-- Driver Details Modal -->
                                    <% if (appointment.driver) { %>
                                        <div class="modal fade" id="driverModal_<%= appointment._id %>" tabindex="-1"
                                            aria-labelledby="driverModalLabel_<%= appointment._id %>"
                                            aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title"
                                                            id="driverModalLabel_<%= appointment._id %>">
                                                            Driver Details
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <% if (appointment.driver.firstName &&
                                                            appointment.driver.lastName) { %>
                                                            <p><strong>Name:</strong>
                                                                <%= appointment.driver.firstName %>
                                                                    <%= appointment.driver.lastName %>
                                                            </p>
                                                            <% } %>
                                                                <% if (appointment.driver.licenseNumber) { %>
                                                                    <p><strong>License Number:</strong>
                                                                        <%= appointment.driver.licenseNumber %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% if (appointment.driver.carDetails) { %>
                                                                            <p><strong>Car Make:</strong>
                                                                                <%= appointment.driver.carDetails.make
                                                                                    %>
                                                                            </p>
                                                                            <p><strong>Car Model:</strong>
                                                                                <%= appointment.driver.carDetails.model
                                                                                    %>
                                                                            </p>
                                                                            <p><strong>Plate Number:</strong>
                                                                                <%= appointment.driver.carDetails.plateNumber
                                                                                    %>
                                                                            </p>
                                                                            <% } %>

                                                                                <!-- Appointment History -->
                                                                                <h5 class="mt-3">Appointment History
                                                                                </h5>
                                                                                <ul class="list-group">
                                                                                    <% if
                                                                                        (appointment.driver.appointments
                                                                                        &&
                                                                                        appointment.driver.appointments.length>
                                                                                        0) { %>
                                                                                        <% appointment.driver.appointments.forEach(function(driverAppointment)
                                                                                            { %>
                                                                                            <li class="list-group-item">
                                                                                                <strong>Date:</strong>
                                                                                                <%= driverAppointment.date
                                                                                                    %> <br>
                                                                                                    <strong>Time:</strong>
                                                                                                    <%= driverAppointment.time
                                                                                                        %>
                                                                                            </li>
                                                                                            <% }); %>
                                                                                                <% } else { %>
                                                                                                    <li
                                                                                                        class="list-group-item">
                                                                                                        No previous
                                                                                                        appointments.
                                                                                                    </li>
                                                                                                    <% } %>
                                                                                </ul>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% }); %>
                            </tbody>
                        </table>
                        <% } else { %>
                            <p class="text-center">No appointments available.</p>
                            <% } %>
                </div>
    </section>

    <!-- Add Bootstrap and custom JS here if needed -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Additional JavaScript functionality if needed
        });
    </script>